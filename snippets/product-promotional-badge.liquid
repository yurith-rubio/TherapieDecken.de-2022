<!-- product-promotional-badge.liquid -->

{% if settings.enable_product_badge %}
  {{ 'badges.css' | asset_url | stylesheet_tag }}
  
  {% if product.handle == 'medizinische-gewichtsdecke-fur-kinder'
  		or product.handle == 'premium-balance-gewichtsdecke-fur-kinder'
        or product.handle == 'gravity-gewichtsdecke-fur-kinder' %}
    <div class="ProductBadge_Wrapper">
      {% comment %}<div class="Prod_SmallBadge">Gratis</div>{% endcomment %}
      <div class="Prod_ImgSmallBadge">
        <img class="Prod_ImgSize-SmallBadge" src="{{ settings.promo_product_badge }}" alt="New Summer 20 euros discount badge" />
      </div>
    </div>
  {% endif %}
{% endif %}