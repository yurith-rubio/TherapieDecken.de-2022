{%- assign collection_image = block.settings.image | default: collection.image | default: collection.products.first.featured_image -%}
{%- assign collection_blanket_image = block.settings.blanket_image | default: collection.image | default: collection.products.first.featured_image -%}
 
<div class="collection_erwchsene_list">
        <div class="collection_content_img">
    		{{collection_image}}
        </div>
        <div class="collection_content_block_main">
          <div class="collection_content_block">
            <div class="blanket_image">
              {{collection_blanket_image}}
            </div>
            <div class="blanket_content">
              <div class="price_div Heading">
                <span style="font-size: 10px; color: #5B5B5B; vertical-align: text-bottom;">Ab</span>
                <span class="price">{{block.settings.price}}</span>
              </div>
              <h2 class="title Heading">
                <span>{{block.settings.title}}</span>
                <span class="title_extra">{{block.settings.subheading}}</span>
              </h2>
              <hr class="ce_divider">
              
              {% if block.settings.title == "PREMIUM Balance" %}
              <div class="ce_container">
                  <div class="icon-30">
                    <span class="icon-premium-cotton"></span>
                  </div>
                  <div class="Heading u-h6">
                    Premium Biobezüge<span>Bezug</span>
                  </div>
              </div>
              <div class="ce_container">
                  <div class="icon-30">
                    <span class="icon-zipper"></span>
                  </div>
                  <div class="Heading u-h6">
                    Reißverschluss<span>Bezugssystem</span>
                  </div>
              </div>
              <div class="ce_container">
                  <div class="icon-30">
                    <span class="icon-icn_metalballs"></span>
                  </div>
                  <div class="Heading u-h6">
                    Edelstahlperlen<span>Gewichtsmaterial</span>
                  </div>
              </div>
              <div class="ce_container">
                  <div class="icon-30">
                    <span class="icon-icn_stability100-1"></span>
                  </div>
                  <div class="Heading u-h6">
                    100% fest stabil<span>Gewichtsverteilung</span>
                  </div>
              </div>
              <div class="ce_container">
                <div class="icon-30">
                	<span class="icon-cooling-blanket"></span>
                </div>
                <div class="Heading u-h6">
                  	Kühlmöglichkeit<span>Zusatzfunktion</span>
                </div>
              </div>
              {% endif %}
              
              {% if block.settings.title == "STANDARD Balance" %}
              {% endif %}
              
              {% if block.settings.title == "BASIC Gravity" %}
              {% endif %}
              
              {% if block.settings.title == "ECO Gravity" %}
              {% endif %}
              
            </div>
          </div>
          <a href="{{block.settings.button_link}}" class="Button_Colleciton_small Button Button--primary">{{block.settings.button_text}}</a>
      	</div>
    </div>