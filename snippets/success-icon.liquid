{% comment %}
	JS/CSS added for the Live Preview app - The code adds a green icon to the left to verify the uploaded picture
	and it does erase it if a user deletes the file
{% endcomment %}

{% if product.handle == 'testing-printing' or product.handle == 'therapiedecken-baumwollbezug-mit-personalisiertem-hunde-katzen-motiv' or product.handle == 'standard-gravity-gewichtsdecke-mit-personalisierten-hunde-katzen-motiv-fur-erwachsene'  %}
  {{ 'success-icon.js' | asset_url | script_tag }}

  {% style %}
  @keyframes fadeIn {
    from {opacity: 0;}
    to {opacity: 1;}
  }
  .success-icon:before{
    content: "";
    display: inline-block;
    height: 13px;
    width: 7px;
    border-bottom: 3px solid green;
    border-right: 3px solid green;
    transform: rotate(45deg);
    animation-name: fadeIn;
    animation-duration: 5s;
  }
  .cl-po--upload-files div{
    display: inline;
    padding-left:5px !important;
  }
  .cl-po--help{
	color: #ba2e2e !important
  }
  {% endstyle %}
{% endif %}
