<!-- collection-promotional-badge.liquid -->

{% comment %}
  {% style %}
    .Grid__Cell:nth-child(3) .Collection_SmallBadge, .Grid__Cell:nth-child(3) .Collection_ImgSmallBadge{
      display: none;
    }
  {% endstyle %}
{% endcomment %}

  {% style %}
    .Grid__Cell:nth-child(1) .Collection_ImgSmallBadge{
      display: none;
    }
  {% endstyle %}
  
  {% assign collection_handles = settings.collection_badge_on_products %}

  {%- comment -%}See CSS on badges.css file {%- endcomment -%}
  {{ 'badges.css' | asset_url | stylesheet_tag }}

  {% if collection.handle == 'gravity-therapiedecken-fur-erwachsene' %}
    <div class="CollectionBadge_Mask__Wrapper">
      {% comment %}<div class="Collection_SmallBadge">Gratis</div>{% endcomment %}
      <div class="Collection_ImgSmallBadge">
        <img class="Collection_ImgSize_SmallBadge" 
             src="{{ settings.promo_collection_badge }}" 
             alt="Collection badge" />
      </div>
    </div>
  {% endif %}
