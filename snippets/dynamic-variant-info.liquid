{%- comment -%} Product Info for Variants - bgd.cover-type Metafield - Yurith {%- endcomment -%}
{% if dynamic_info_type == 'weight_info' %}
  {% if option.name == 'Gewicht' or option.name == 'Deckengewicht' %}
    {% for variant in product.variants %}
      {% if variant.metafields.bgd.weight %}
        {% assign weight_class = "weight_info hide" %}
        {% if variant.id == product.selected_or_first_available_variant.id %}
          {% assign weight_class = "weight_info" %}
        {% endif %}
        <div id="weight_info_{{variant.id}}" class="{{ weight_class }}">
          {{ variant.metafields.bgd.weight }}
        </div>
      {% endif%}
    {% endfor %}
  {% endif%}
{% endif %}

{%- comment -%} Cover type dynamic variant's info - metafields.bgd.cover-type - Yurith {%- endcomment -%}
{% if dynamic_info_type == 'cover_type_info' %}
  {% for variant in product.variants %}
    {% if variant.metafields.bgd.cover-type %}
      {% assign cover_type_class = "cover_type_info hide" %}
      {% if variant.id == product.selected_or_first_available_variant.id %}
        {% assign cover_type_class = "cover_type_info" %}
      {% endif %}
        <div id="cover_type_info_{{variant.id}}" class="{{ cover_type_class }}">
          {% if variant.metafields.td_field.seasonal_variant_dynamic_info and settings.seasonal_product_info %}
            <span class="icon-information-outline"></span>
            {{ variant.metafields.td_field.seasonal_variant_dynamic_info }}
          {% else %}
            {{ variant.metafields.bgd.cover-type }}
          {% endif%}
        </div>
    {% endif%}
  {% endfor %}
{% endif %}

{%- comment -%} Additional cover type dynamic variant's info - metafields.bgd.cover-type - Yurith {%- endcomment -%}
{% if dynamic_info_type == 'additional_cover_type_info' %}
    {% for variant in additional_product.variants %}
      {% if variant.metafields.bgd.cover-type %}
        {% assign design_class = "additional-info-wr hide" %}
        {% if variant.id == additional_product.selected_or_first_available_variant.id %}
        	{% assign design_class = "additional-info-wr" %}
        {% endif %}
        <div data-variant-id="{{variant.id}}" class="{{ design_class }}">
          {{ variant.metafields.bgd.cover-type }}
        </div>
      {% endif%}
    {% endfor %}
{% endif %}