<div class="MyCart_ItemWrapper MyCartUpsells_ItemWrapper">
  
  <script class="MyCart_UpsellJson_{{ position }}_{{ loop }}" type="text/javascript">
    window.upsell{{ position }}_block{{ loop }} = {{ all_products[upsell] | json }};
  </script>

  <script type="application/json" id="ProductJson-liveOptions{{ position }}_{{ loop }}" class="ProductJson-liveOptions"></script>
  
  <div class="MyCart_ImageItemWrapper">
    <img class="MyCart_ImageItem" src="{{ upsell.featured_image | image_url: width: 70 }}">
  </div>
  <div class="MyCart_ContentItem">
    <h2 class="Heading MyCart_H2">
      <a class="MyCart_H2" href="{{ upsell.url }}">{{ upsell.title }}</a>
    </h2>
    <p class="MyCart_PriceItem">Ab <span class="">{{ upsell.price_min | money_without_trailing_zeros }}</span></p>
    <div onclick="openCartUpsell({{ position }}, {{ loop }})" 
      class="openUpsell MyCartUpsells_Bttn {{ theme_button_style }}"
      data-upsell-id="{{ upsell.id }}"
      data-first-price-available="{{ upsell.selected_or_first_available_variant.price | money }}"
      data-first-compared-price="{{ upsell.selected_or_first_available_variant.compare_at_price | money }}"
      >
      Hinzuf√ºgen
    </div>
  </div>
</div>