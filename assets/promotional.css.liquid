/* Home Cover Pages */
.promo-heroImage{
  width: 1000px;
  height: auto;
}
.Slideshow__Content{
  padding: unset !important;
}
.promotion-home-hero_content_container{
  height: 100%;
  padding: 0 0 30px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.home_promotional_content_wrapper{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding: 0 30px;
}
.home_promotional_bottom_part{
  display: flex; 
  justify-content: center;
  text-align: center;
  margin-top: 20px;
}
.promotion-home-hero_button:before{
  background-color: {{ settings.button_color }} !important;
}
.promotion-home-hero_button{
  position: relative;
  color: {{ settings.text_button_color }} !important;
}
.promotion-home-hero_button:hover{
  position: relative;
  color: {{ settings.text_button_color_hover }} !important;
}
.homePromotional_art_desktop{
  display: block;
  width: 100%;
  max-width: 471px;
} 
.Slideshow--fullscreen .Slideshow__Image{
  object-position: {{ settings.image_position }} !important;
}
.Slideshow__ImageContainer{
  background-position: {{ settings.promo_image_position }};
}
.Image--contrast::after{
  opacity: {{ settings.promo_image_overlay | divided_by: 10.0 }}
}
.SectionHeader{
  position: relative;
}
/* Small */
@media screen  and (max-width: 640px) {
  .promotion-home-hero_content_container{
    width: 100%;
  }
  .homePromotional_art_desktop{
    position: relative;
  }
  .promotion-home-hero_button{
    top: 10px;
  }
  .promo-heroImage{
    width: 500px;
    height: auto;
  }
  .Slideshow__ImageContainer{
    background-image: url('{{ settings.promo_image_mobile | img_url: 'master' }}');
  }
  .SectionHeader{
    top: {{ settings.mobile_promo_art_position_y }}px;
  }
  .PromoCollection_Container{
    background: url({{ settings.collection_promo_image | img_url: '1x1', format: 'jpg' }});
  }
}

/* Medium and up */
@media screen and (min-width: 641px) {
  .promotion-home-hero_button{
    right: 8%;
  }
  .Slideshow__ImageContainer{
    background-image: url('{{ settings.promo_image | img_url: 'master' }}');
  }
  .SectionHeader{
    top: {{ settings.desktop_promo_art_position_y }}px;
  }
}

/* Medium */
@media screen and (min-width: 641px) and (max-width: 900px) {
  .promotion-home-hero_content_container{
    width: 70%;
  }
}

/* Big */
@media screen and (min-width: 901px) {
  .promotion-home-hero_content_container{
    width: 50%;
  }
}