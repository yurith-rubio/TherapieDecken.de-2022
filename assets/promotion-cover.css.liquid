/* Home Cover Pages */
.promo-heroImage{
  width: 1000px;
  height: auto;
}
.Slideshow__Content{
  padding: unset !important;
}
.promotion-home-hero_content_container{
  height: 100%;
  padding: 0 0 30px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.home_promotional_content_wrapper{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding: 0 30px;
}
.home_promotional_bottom_part{
  display: flex; 
  justify-content: center;
  text-align: center;
  margin-top: 20px;
}
.promotion-home-hero_button:before{
  background-color: {{ settings.button_color }} !important;
}
.promotion-home-hero_button{
  position: relative;
  color: {{ settings.text_button_color }} !important;
}
.promotion-home-hero_button:hover{
  position: relative;
  color: {{ settings.text_button_color_hover }} !important;
}
.homePromotional_art_desktop{
  display: block;
  width: 100%;
} 
.Slideshow--fullscreen .Slideshow__Image{
  object-position: {{ settings.image_position }} !important;
}
.Slideshow__ImageContainer{
  background-size: cover;
}
/* Mobile */
@media screen  and (max-width: 640px) {
  .Promotional_Content{
    width: 100%;
    top: {{ settings.promo_art_y_content_mobile }}px;
  }
  .homePromotional_art_desktop{
    position: relative;
  }
  .promotion-home-hero_button{
    top: 10px;
  }
  .promo-heroImage{
    width: 500px;
    height: auto;
  }
  .Slideshow__ImageContainer{
    background-image: url('{{ settings.promo_image_mobile | img_url: 'master' }}');
  }
  .promoCover_backgroundPosition{
    background-position-x: {{ settings.image_position }};
  }
}

/* Tablet and up */
@media screen and (min-width: 641px) {
  .promotion-home-hero_button{
    right: 8%;
  }
  .Slideshow__ImageContainer{
    background-image: url('{{ settings.promo_image | img_url: 'master' }}');
  }
}

/* Tablet */
@media screen and (min-width: 641px) and (max-width: 1080px) {
  .Promotional_Content{
    width: 450px;
    top: {{ settings.promo_art_y_content_tablet }}px;
  }
}

/* Desktop */
@media screen and (min-width: 1081px) {
  .Slideshow__ImageContainer{
    background-position-y: center;
  }
  .Promotional_Content{
    width: 550px;
    top: {{ settings.promo_art_y_content }}px;
  }
}