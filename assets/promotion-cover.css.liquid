/* Home Cover Pages */
.promo-heroImage{
  width: 1000px;
  height: auto;
}

.Slideshow__Content{
  padding: unset !important;
}
.promotion-home-hero_content_container{
  height: 100%;
  padding: 0 0 30px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.home_promotional_content_wrapper{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding: 0 30px;
}

.home_promotional_bottom_part{
  display: flex; 
  justify-content: center;
  text-align: center;
  margin-top: 20px;
}

.promotion-home-hero_button:before{
  background-color: {{ settings.button_color }} !important;
}

.promotion-home-hero_button{
  position: relative;
  color: {{ settings.text_button_color }} !important;
}

.promotion-home-hero_button:hover{
  position: relative;
  color: {{ settings.text_button_color_hover }} !important;
}

.homePromotional_art_desktop{
  display: block;
  width: 100%;
  max-width: 471px;
} 

@media screen  and (max-width: 640px) {
  .promotion-home-hero_content_container{
    width: 100%;
    top: {{ settings.promo_art_y_content_mobile }}px;
  }
  .homePromotional_art_desktop{
    position: relative;
  }
  .promotion-home-hero_button{
    top: 10px;
  }
  .promo-heroImage{
    width: 500px;
    height: auto;
  }
  .Slideshow__ImageContainer{
    background-image: url('{{ settings.promo_image_mobile | img_url: 'master' }}');
  }
}

@media screen and (min-width: 641px) {
  .promotion-home-hero_content_container{
    top: {{ settings.promo_art_y_content }}px;
  }
  .promotion-home-hero_button{
    right: 8%;
  }
  .Slideshow__ImageContainer{
    background-image: url('{{ settings.promo_image | img_url: 'master' }}');
  }
}

@media screen and (min-width: 641px) and (max-width: 900px) {
  .promotion-home-hero_content_container{
    width: 70%;
  }
}

@media screen and (min-width: 901px) {
  .promotion-home-hero_content_container{
    width: 50%;
  }
}

/* Medium */
@media only screen and (min-width: 641px) and (max-width: 1080px){
  .Slideshow__ImageContainer{
    background-position-x: {{ settings.promo_tablet_image_position }}%;
  }
}

@media screen and (min-width: 1922px) {
  .Slideshow__ImageContainer{
    background-position-y: center;
  }
}