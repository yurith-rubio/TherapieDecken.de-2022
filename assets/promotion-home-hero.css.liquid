/* Home Cover Pages */
.promo-heroImage{
  width: 1000px;
  height: auto;
}

.Slideshow__Content{
  padding: unset !important;
}
.promotion-home-hero_content_container{
  height: 100%;
  padding: 0 0 30px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.home_promotional_content_wrapper{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding: 0 30px;
}

.home_promotional_bottom_part{
  display: flex; 
  justify-content: center;
  text-align: center;
}

.promotion-home-hero_button:before{
  background-color: {{ settings.button_color }} !important;
}

.promotion-home-hero_button{
  position: relative;
  color: {{ settings.text_button_color }} !important;
}

.promotion-home-hero_button:hover{
  position: relative;
  color: {{ settings.text_button_color_hover }} !important;
}

.homePromotional_art_desktop{
  display: block;
  width: 100%;
  max-width: 550px;
} 

.Slideshow--fullscreen .Slideshow__Image{
  object-position: {{ settings.image_position }} !important;
}

@media screen  and (max-width: 640px) {
  .promotion-home-hero_content_container{
    width: 90%;
  }
  .homePromotional_art_desktop{
    position: relative;
    right: -10%;
  }
  .promotion-home-hero_button{
    right: -7%;
    top: 10px;
  }
  .promo-heroImage{
    width: 500px;
    height: auto;
  }
  .Slideshow__ImageContainer{
    background-image: url('https://cdn.shopify.com/s/files/1/2451/6611/files/TD_Father_s_day_promotion_-_main_image_x540_ca82d9f3-6c21-4ac5-9848-b539cfca7c41.jpg?v=1653671234');
  }
}

@media screen  and (min-width: 641px) {
  .promotion-home-hero_button{
    right: 8%;
  }
  .Slideshow__ImageContainer{
    background-image: url('https://cdn.shopify.com/s/files/1/2451/6611/files/TD_Father_s_day_promotion_-_main_image_x800.jpg?v=1653034340');
  }
}

@media screen  and (min-width: 641px) and (max-width: 900px) {
  .promotion-home-hero_content_container{
    width: 70%;
  }
}

@media screen  and (min-width: 901px) {
  .promotion-home-hero_content_container{
    width: 50%;
  }
}