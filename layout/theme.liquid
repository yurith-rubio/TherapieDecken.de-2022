<script type="text/javascript" src="https://bcdn.starapps.studio/apps/via/therapiedecken/script-1631272472.js?shop={{shop.permanent_domain}}" async></script>
<!-- starapps_scripts_end -->
    
    {{ content_for_header }}

    <!-- Google Tag Manager -->
