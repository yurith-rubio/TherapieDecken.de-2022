<div class="full-bg-color-product-details">
  <div class="medium-grid">
    <p class="SectionHeader__SubHeading Heading u-h6 center-text">{{ section.settings.subheading_tag1 | escape }}</p>
    <h2 class="SectionHeader__Heading Heading u-h1 center-text">{{ section.settings.title_tag1 | escape }}</h2>
    <div class="product-details-infomation">
      <div class="product-page-title-line"></div>

      <div class="product-details-infomation-section">

      {% for block in section.blocks %}
        <details>
          <summary>{{ block.settings.title_block }}</summary>
          {% if block.settings.html_content != blank %}
          	<div>{{ block.settings.html_content }}</div>
          {% endif %}
          
		  {% if block.settings.extra_block %}
              <details class="detailsfaq">
                <summary class="summaryfaq">{{ block.settings.subtitle_block }}</summary>
                <div class="content-extra-faq">
                  {{ block.settings.html_content_extra }}
                </div>
              </details>
           {% endif %}
          {% if block.settings.extra_block2 %}
              <details class="detailsfaq">
                <summary class="summaryfaq">{{ block.settings.subtitle_block2 }}</summary>
                <div class="content-extra-faq">
                  {{ block.settings.html_content_extra2 }}
                </div>
              </details>
           {% endif %}
          {% if block.settings.extra_block3 %}
              <details class="detailsfaq detailsfaq-last">
                <summary class="summaryfaq">{{ block.settings.subtitle_block3 }}</summary>
                <div class="content-extra-faq">
                  {{ block.settings.html_content_extra3 }}
                </div>
              </details>
           {% endif %}
          
        {% if block.settings.richtext_content2 != blank %}
          	<div class="last-content-block-faq">{{ block.settings.richtext_content2 }}</div>
        {% endif %}
        </details>
        
          
       {% endfor %}

      </div>
    </div>
  </div>
</div>        



