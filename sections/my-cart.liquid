  {
	"name": "My Cart",
    "settings": [],
    "presets": [
      {
        "name": "My cart"
      }
    ],
    "blocks": [
      {
        "type": "Trigger",
        "name": "Product trigger",
        "settings": [
          {
            "type": "header",
            "content": "Product triggers"
          },
          {
