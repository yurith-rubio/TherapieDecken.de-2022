<!-- section : banner custom HTML -->
<section class="Section" id="section-{{ section.id }}" style="background-color: {% if section.settings.bg-color != blank %} {{ section.settings.bg-color }}; {% endif %} {% if section.settings.bg-color != blank %}padding: {{ section.settings.spacer }};{% endif %}">
  {%- if section.settings.subheading != blank or section.settings.title != blank -%}
  <header class="SectionHeader SectionHeader--center">
    {%- if section.settings.subheading != blank -%}
    <p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</p>
    {%- endif -%}

    {%- if section.settings.title != blank -%}
    <h2 class="SectionHeader__Heading Heading u-h2">{{ section.settings.title | escape }}</h2>
    {%- endif -%}
  </header>
  {%- endif -%}

  <div class="Rte" style="text-align: center">
    {{ section.settings.html }}
  </div>
</section>

{% schema %}
{
  "name": "Banner custom HTML",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Sub-heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your HTML"
    },
    {
      "type": "html",
      "id": "html",
      "label": "HTML content",
      "default": "<p>Write your own custom HTML content.</p>"
    },
    {
      "type": "text",
      "id": "spacer",
      "label": "Space Top and Bottom",
      "default": "50px"
    },
  	{
      "type": "color",
      "id": "bg-color",
      "label": "Background Color Container"
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Banner custom HTML",
      "settings": {}
    }
  ]
}
{% endschema %}

