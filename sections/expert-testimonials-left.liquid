<!-- section: experts-testimonials-custom.liquid -->

{% style %}

.tm22_wr_lp{
  display: flex;
  flex-wrap: wrap;
  max-width: 990px;
  justify-content: space-around;
}

.tm22_wr_lp > div {
  width: 300px;
}

.tm22_wr_hp{
  display: flex;
  max-width: 990px;
  justify-content: center;
}
.tm22_wr_hp > div {
  width: 380px;
}
@media only screen and (max-width: 640px){
  .tm22_wr_hidden {
    display: none !important;
  }
  .tm22_wr_hp{
	flex-wrap: wrap;
  }
}
@media only screen and (min-width: 641px){
}
.tm22_wr_quote {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin: -150px 20px 30px 20px;
}

.tm22_wr_quote a:before {
    height: 0px!important;
}

.tm22_pic_wr {
    position: relative;
    width: 150px!important;
    height: 150px!important;
    display: flex!important;
	z-index: 1;
    align-self: center;
    bottom: -150px;
}

.tm22_text_wr {
  background-color: #ffffff;
  border-radius: 10px;
  margin-top: 75px;
  padding-top: 100px;
  padding-right: 25px;
  padding-left: 25px;
  padding-bottom: 20px;
  text-align: left;
  min-height: 385px;
}

.tm22_wr_lp > div a {
    text-decoration: none!important;
}

.tm22_wr_lp img, .tm22_pic_wr img {
	max-width: 100%!important;
}

.tm22_left_quote{
  margin-top: 10px;
  margin-bottom: -5px;
}
.tm22_citation > p {
  overflow: hidden;
}
.tm22_citation > p {
  margin: 0px;
  overflow: hidden;
}
.tm22_img{
  height: inherit;
}

{% endstyle %}


<div class="full-bg-color-prestige" style="{% if section.settings.bg-color != blank %}background-color: {{ section.settings.bg-color }};{% endif %}">
  <div class="Container--standard--medium centered section-space-medium">
  	<h2 style="margin-bottom: 40px;" class="Heading u-h2">{{ section.settings.header }}</h2>
  
  	<div class="tm22_wr_hp">
      {% for block in section.blocks %}
      <div class="owl-carousel">
      	<div class="tm22_wr_quote item">
          <div class="tm22_pic_wr">
            <img
              style="border-radius: 50%"
              class="tm22_img Image--lazyLoad"
              data-src="{{ block.settings.tm22_picture | img_url:'master' }}"
              src="{{ block.settings.tm22_picture | img_url:'master' }}"
              alt=""
            />
          </div>

            <div class="tm22_text_wr">
              <div style="font-weight: bold; margin-bottom: 0px" class="gral_font_16px tm22_name">
                {{ block.settings.tm22_name }}
              </div>
              {% if block.settings.tm22_role != blank %}
              <div style="font-weight: normal; height: 50px" class="gral_font_16px tm22_name">
                {{ block.settings.tm22_role }}
              </div>
              {% endif %}
              <div class="tm22_left_quote">
                <span class="gral_icon21_yellow gral_font_20px icon-left-quote"></span>
              </div>
              <div class="tm22_citation">
                {{ block.settings.tm22_paragraph }}
              </div>
              <div>
                <span style="position: relative; left: 220px" class="gral_icon21_yellow gral_font_20px icon-right-quote"></span>
              </div>
            </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
$('.tm22_wr_hp .owl-carousel').owlCarousel({
    loop:true,
    margin:10,
    dots:true,
    responsiveClass:true,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:1
        },
        1000:{
            items:2
        }
    }
})
</script>

{% schema %}
  {
    "name": "Expert testimonials left",
    "settings": [
            {
              "type": "color",
              "id": "bg-color",
              "label": "Background Color"					
            },
            {
              "type": "text",
              "id": "header",
              "label": "Header Title"					
            }
				],
	"blocks": [
	  {
            "type": "testimonial",
            "name": "Expert testimonials left",
            "settings": [
                {
				  "type": "url",
                  "id": "link",
                  "label": "Link"					
                },
                {
                  "type": "image_picker",
                  "label": "Picture",
                  "id": "tm22_picture"						
                },
                {
                  "type": "text",
                  "id": "tm22_name",
                  "label": "Name",
                  "default": "Joe Doe"
                },
                {
                  "type": "text",
                  "id": "tm22_role",
                  "label": "Role",
                  "default": "Psychologin"
                },
                {
                  "type": "richtext",
                  "id": "tm22_paragraph",
                  "label": "Citation 1",
                  "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco</p>"
                }
            ]
        }
	],
	"presets": [
				{
                  "category": "Homepage Section",
                  "name": "Expert testimonials left"
                  }
				]
  }
{% endschema %}
