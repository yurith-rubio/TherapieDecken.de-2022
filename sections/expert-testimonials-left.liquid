<!-- section: experts-testimonials-left.liquid -->

{% style %}

.tmex_wr_lp{
  display: flex;
  flex-wrap: wrap;
  max-width: 990px;
  justify-content: space-around;
}

.tmex_wr_lp > div {
  width: 300px;
}

@media only screen and (max-width: 640px){
  .tmex_wr_hidden {
    display: none !important;
  }
  .tmex_wr_hp{
	flex-wrap: wrap;
  }
}
@media only screen and (min-width: 641px){
}
.tmex_wr_quote {
  display: grid;
   grid-template-columns: 1fr 2fr;
}

.tmex_wr_quote a:before {
    height: 0px!important;
}

.tmex_pic_wr {
    position: relative;
	z-index: 1;
width: 185px;
    height: 185px;
}

.tmex_text_wr {
  padding-left: 25px;
  text-align: left;
}

.tmex_wr_lp > div a {
    text-decoration: none!important;
}

.tmex_wr_lp img, .tmex_pic_wr img {
	max-width: 100%!important;
}

.tmex_left_quote{
  margin-top: 10px;
  margin-bottom: -5px;
}
.tmex_citation > p {
  overflow: hidden;
}
.tmex_citation > p {
  margin: 0px;
  overflow: hidden;
}
.tmex_img{
  height: inherit;
}

{% endstyle %}


<div class="full-bg-color-prestige" style="{% if section.settings.bg-color != blank %}background-color: {{ section.settings.bg-color }};{% endif %}">
  <div class="Container--standard--medium centered section-space-medium">
  	<h2 style="margin-bottom: 40px;" class="Heading u-h2">{{ section.settings.header }}</h2>
  
  	<div class="tmex_wr_hp">
      <div class="owl-carousel">
      {% for block in section.blocks %}
      	<div class="tmex_wr_quote item">
          <div class="tmex_pic_wr">
            <img
              style="border-radius: 50%"
              class="tmex_img Image--lazyLoad"
              data-src="{{ block.settings.tmex_picture | img_url:'master' }}"
              src="{{ block.settings.tmex_picture | img_url:'master' }}"
              alt=""
            />
          </div>

            <div class="tmex_text_wr">
              <div style="font-weight: bold; margin-bottom: 0px" class="gral_font_16px tmex_name">
                {{ block.settings.tmex_name }}
              </div>
              {% if block.settings.tmex_role != blank %}
              <div style="font-weight: normal; height: 50px" class="gral_font_16px tmex_name">
                {{ block.settings.tmex_role }}
              </div>
              {% endif %}
              <div class="tmex_left_quote">
                <span class="gral_icon21_yellow gral_font_20px icon-left-quote"></span>
              </div>
              <div class="tmex_citation">
                {{ block.settings.tmex_paragraph }}
              </div>
              <div>
                <span style="position: relative; left: 220px" class="gral_icon21_yellow gral_font_20px icon-right-quote"></span>
              </div>
            </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
$('.tmex_wr_hp .owl-carousel').owlCarousel({
    loop:true,
    margin:10,
    dots:true,
    responsiveClass:true,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:1
        },
        1000:{
            items:2
        }
    }
})
</script>

{% schema %}
  {
    "name": "Expert testimonials left",
    "settings": [
            {
              "type": "color",
              "id": "bg-color",
              "label": "Background Color"					
            },
            {
              "type": "text",
              "id": "header",
              "label": "Header Title"					
            }
				],
	"blocks": [
	  {
            "type": "testimonial",
            "name": "Expert testimonials left",
            "settings": [
                {
				  "type": "url",
                  "id": "link",
                  "label": "Link"					
                },
                {
                  "type": "image_picker",
                  "label": "Picture",
                  "id": "tmex_picture"						
                },
                {
                  "type": "text",
                  "id": "tmex_name",
                  "label": "Name",
                  "default": "Joe Doe"
                },
                {
                  "type": "text",
                  "id": "tmex_role",
                  "label": "Role",
                  "default": "Psychologin"
                },
                {
                  "type": "richtext",
                  "id": "tmex_paragraph",
                  "label": "Citation 1",
                  "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco</p>"
                }
            ]
        }
	],
	"presets": [
				{
                  "category": "Homepage Section",
                  "name": "Expert testimonials left"
                  }
				]
  }
{% endschema %}
