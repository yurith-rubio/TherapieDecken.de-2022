{% style %}
    .leadGrid_container{
        display: grid;
        grid-template-columns: auto auto;
        gap: 10px;
    }
    .leadGrid_productBlockWrapper{
        width: 100%;
        display: flex;
        align-items: center;
        flex-direction: column;
        max-width: 400px;
        background-color: #f8f8f8;
        padding: 30px;
    }
    .leadGrid_productBlockWrapper h2{
        margin-bottom: 0
    }
    .leadGrid_iconTextWrapper{
        display: flex;
        align-items: center;
        padding: 5px 0;
    }
    .leadGrid_iconTextWrapper .icon-30{
        font-size: 30px;
    }
    .leadGrid_iconTextWrapper .icon-30:before{
        color: #3C3A3A;
    }
    .leadGrid_iconTextWrapper .Heading{
        line-height: 16px;
        font-weight: 700;
        padding-left: 10px;
    }
    .leadGrid_buttonBlock{
        margin-top: 10px;
    }
    .leadGrid_lowestPrice{
        font-size: 24px;
    }
{% endstyle %}

