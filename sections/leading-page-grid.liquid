{% style %}
  .leadGrid_productImageBadge{
    max-height: {{ section.settings.badge_width }}px;
    top: {{ section.settings.badge_top }}px;;
    right: {{ section.settings.badge_right }}px;;
  }
{% endstyle %}

{% assign gravity_cheapest = all_products ['basic-gravity-gewichtsdecke-fur-erwachsene'] %}
{% assign gravity_most_reviews = all_products ['therapiedecken'] %}
{% assign balance = all_products ['balance-gewichtsdecke-fur-erwachsene'] %}
{% assign covers_cheapest = all_products ['therapiedecken-basic-bezug-in-weiss'] %}

<div class="leadGrid_container">
    <div class="leadGrid_productBlockWrapper">
      {% if settings.enable_leading_collection_badge and section.settings.promo_badge_1 %}
        <div class="leadGrid_badgeWrapper">
          <img class="leadGrid_productImageBadge" src="{{ settings.promo_badge }}" alt="badge-gravity-product" width="" height="auto">
        </div>
      {% endif %}
      <a href="/collections/gravity-therapiedecken-fur-erwachsene">
        <img class="leadGrid_logo" src="https://cdn.shopify.com/s/files/1/2451/6611/files/Gravity-black-svg-logo.svg?v=1661176871" alt="gravity-logo" width="100" height="auto">
        <div class="leadGrid_productImageContent">
          <img class="leadGrid_productImage" src="https://cdn.shopify.com/s/files/1/2451/6611/files/gravity-product-pink.png?v=1664632779"" alt="gravity-product" width="" height="auto">
        </div>
        <h2 class="Heading u-h1">Gravity</h2>
        <p class="Heading">Gewichtsdecke für Erwachsene</p>
        <div style='{{ jm_style }}; margin-bottom: 20px;' class='jdgm-widget jdgm-preview-badge' data-id='{{ gravity_most_reviews.id }}'
            data-template='{% if concierge_install == true or concierge_install == nil %}{{ template }}{% else %}manual-installation{% endif %}'
            data-auto-install='{% if auto_install != nil %}{{ auto_install }}{% else %}false{% endif %}'>
                {{ gravity_most_reviews.metafields.judgeme.badge }}
        </div>
        <div class="leadGrid_productCharacteristicsWrapper">
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-stability70"></span>
                <p class="Heading u-h6">
                    80% fest stabil
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_glassballs"></span>
                <p class="Heading u-h6">
                    Glasperlen
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_loopribbon"></span>
                <p class="Heading u-h6">
                    Schlaufen
                </p>
            </div>
        </div>
        <p>Ab <span class="leadGrid_lowestPrice Heading Price--highlight">{{ gravity_cheapest.price_min | money_without_trailing_zeros }}</span></p>
        <button class="leadGrid_buttonBlock Button_Colleciton_small Button Button--primary">Mehr Erfahren</button>
      </a>
    </div>
    <div class="leadGrid_productBlockWrapper">
      {% if settings.enable_leading_collection_badge and section.settings.promo_badge_2 %}
        <div class="leadGrid_badgeWrapper">
          <img class="leadGrid_productImageBadge" src="{{ settings.promo_badge }}" alt="badge-balance-product" width="" height="auto">
        </div>
      {% endif %}
      <a href="/collections/balance-therapiedecken-fur-erwachsene">
        <img class="leadGrid_logo" src="https://cdn.shopify.com/s/files/1/2451/6611/files/Balance-black-svg-logo.svg?v=1661176871" alt="balance-logo" width="100" height="auto">
        <div class="leadGrid_productImageContent">
          <img class="leadGrid_productImage" src="https://cdn.shopify.com/s/files/1/2451/6611/files/Balance_new.png?v=1661511817" alt="balance-product" width="" height="auto">
        </div>
        <h2 class="Heading u-h1">Balance</h2>
        <p class="Heading">Gewichtsdecke für Erwachsene</p>
        <div style='{{ jm_style }}; margin-bottom: 20px;' class='jdgm-widget jdgm-preview-badge' data-id='{{ balance.id }}'
            data-template='{% if concierge_install == true or concierge_install == nil %}{{ template }}{% else %}manual-installation{% endif %}'
            data-auto-install='{% if auto_install != nil %}{{ auto_install }}{% else %}false{% endif %}'>
                {{ balance.metafields.judgeme.badge }}
        </div>
        <div class="leadGrid_productCharacteristicsWrapper">
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_stability100-1"></span>
                <p class="Heading u-h6">
                    100% fest stabil
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_metalballs"></span>
                <p class="Heading u-h6">
                    Edelstahlperlen
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-zipper"></span>
                <p class="Heading u-h6">
                    Reißverschluss
                </p>
            </div>
        </div>
        <p>Ab <span class="leadGrid_lowestPrice Heading Price--highlight">{{ balance.price_min | money_without_trailing_zeros }}</span></p>
        <button class="leadGrid_buttonBlock Button_Colleciton_small Button Button--primary">Mehr Erfahren</button>
      </a>
    </div>
    <div class="leadGrid_productBlockWrapper">
      <a href="/collections/andere-therapiedecken">
        <img class="leadGrid_productImage" src="https://cdn.shopify.com/s/files/1/2451/6611/files/other_blankets.png?v=1661177067" alt="gravity-product" width="" height="auto">
        <h2 class="Heading u-h1">Andere Decken</h2>
        <ul class="Heading" style="width: 160px; margin: auto;">
            <li>ECO Therapiedecken</li>
            <li>Yoga Therapiedecken</li>
            <li>Knotendecke</li>
        </ul>
        <button class="leadGrid_buttonBlock Button_Colleciton_small Button Button--primary">Mehr Erfahren</button>
      </a>
    </div>
    <div class="leadGrid_productBlockWrapper">
      <a href="/collections/ersatzbezuge-fur-therapiedecken">
        <img class="leadGrid_productImage" src="https://cdn.shopify.com/s/files/1/2451/6611/files/covers.png?v=1661177067" alt="gravity-product" width="" height="auto">
        <h2 class="Heading u-h1">Ersatzbezüge für Therapiedecken</h2>
        <p>Ab <span class="leadGrid_lowestPrice Heading Price--highlight">{{ covers_cheapest.price_min | money_without_trailing_zeros }}</span></p>
        <button class="leadGrid_buttonBlock Button_Colleciton_small Button Button--primary">Mehr Erfahren</button>
      </a>
    </div>
</div>


{% schema %}
{
  "name": "Grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "promo_badge_1",
      "label": "Enable badge on block 1",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "promo_badge_2",
      "label": "Enable badge on block 2",
      "default": false
    },
    {
      "type": "range",
      "id": "badge_width",
      "label": "Desktop: Width",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "badge_top",
      "label": "Top space",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "badge_right",
      "label": "Right space",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 30
    }
  ],
  "presets": [
	{
      "category": "Pages",
      "name": "Grid",
      "settings": {}
	}
  ]
}
{% endschema %}