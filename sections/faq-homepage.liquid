<!-- section: faq-homepage -->

{% style %}
.grid-general-product{
    max-width: 900px;
    margin: auto;
    padding: 50px 0;
}
.faq-intro-section{ 
    text-align: center;
}
.faq-intro-sec-content{ 
    display: flex;
    align-items: center;
	width: 100%;
    text-align: left;
}
.intro-text-wr{
  width: 100%;
}
details{
    width: 100%;
    border-bottom: 1px solid #c8c8c8;
	list-style: none!important;
} 
summary::before{ 
    content: "+";
    padding: 0 10px; 
    width: 23px;
    height: 23px;
    float: right;
}

details[open] summary:before {
    content: "-";
    padding: 0 7px;
}

details:first-child {
    border-top: 1px solid #ccc;
}

details summary::-webkit-details-marker {
  display: none!important;
}

details:focus, summary:focus {
outline: 0!important;
}

summary{ 
    width: 100%; 
    padding: 10px 10px; 
}
.content{
    padding: 5px 10px 10px 10px;
    width: 100%;
}

@media screen and (max-width: 600px) {
.intro-text-wr {
	width: 80%!important;
    text-align: left!important;
    margin: auto;
}
.faq-intro-sec-content {
    display: inline-block;
	}
}

{% endstyle %}

<div class="grid-general-product">
<div class="faq-intro-section">
    <p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.sub-heading}}</p>
    <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.heading}}</h2>
    <div class="faq-intro-sec-content">
        <div class="intro-text-wr">
            {% for block in section.blocks %}
                <details>
                    <summary>{{ block.settings.summary}}</summary>
                    <p class="content">{{ block.settings.content }}</p>
                </details>
            {% endfor %}

        </div>
    </div>
</div>


</div>

{% schema %} 
{
    "name": "FAQ Homepage",
    "settings": [
		{
            "type": "text",
            "id": "sub-heading",
            "label": "Sub-Heading Accordion",
            "default": "Premium Therapiedecke"
        },
		{
            "type": "text",
            "id": "heading",
            "label": "Heading Accordion",
            "default": "Eigenschaften der Balance Gewichtsdecke"
        },
        {
            "id": "video_url",
            "type": "video_url",
            "label": "Video URL for Desktop",
            "accept": ["vimeo"],
            "info": "Supports Vimeo",
            "default": "https://player.vimeo.com/video/399192093"
        }
    ],
    "blocks": [
        {
            "type": "accordion_simple",
            "name": "Accordion with Video",
            "settings": [
                {
                    "type": "text",
                    "id": "summary",
                    "label": "Title",
                    "default": "Title Example"
                },
                {
                    "type": "textarea",
                    "id": "content",
                    "label": "Content",
                    "default": "Example of text that could be paced with something related to the title above"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "FAQ",
            "name": "FAQ Homepage",
            "settings": {}
        }
    ]
}
{% endschema %}