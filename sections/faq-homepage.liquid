<!-- section: faq-homepage -->
{{ 'faq-homepage.css' | asset_url | stylesheet_tag }}

<div class="grid-general-product">
<div class="faq-intro-section">
    <p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.sub-heading}}</p>
    <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.heading}}</h2>
    <div class="faq-intro-sec-content">
        <div class="intro-text-wr">
            {% for block in section.blocks %}
                <details>
                    <summary>{{ block.settings.summary}}</summary>
                    <p class="content">{{ block.settings.content }}</p>
                </details>
            {% endfor %}

        </div>
    </div>
</div>


</div>

{% schema %} 
{
    "name": "FAQ Homepage",
    "settings": [
		{
            "type": "text",
            "id": "sub-heading",
            "label": "Sub-Heading Accordion",
            "default": "Premium Therapiedecke"
        },
		{
            "type": "text",
            "id": "heading",
            "label": "Heading Accordion",
            "default": "Eigenschaften der Balance Gewichtsdecke"
        },
        {
            "id": "video_url",
            "type": "video_url",
            "label": "Video URL for Desktop",
            "accept": ["vimeo"],
            "info": "Supports Vimeo",
            "default": "https://player.vimeo.com/video/399192093"
        }
    ],
    "blocks": [
        {
            "type": "accordion_simple",
            "name": "Accordion with Video",
            "settings": [
                {
                    "type": "text",
                    "id": "summary",
                    "label": "Title",
                    "default": "Title Example"
                },
                {
                    "type": "textarea",
                    "id": "content",
                    "label": "Content",
                    "default": "Example of text that could be paced with something related to the title above"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "FAQ",
            "name": "FAQ Homepage",
            "settings": {}
        }
    ]
}
{% endschema %}