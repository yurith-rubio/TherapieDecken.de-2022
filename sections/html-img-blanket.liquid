              alt="{{ section.settings.image_tag2.alt | escape }}">

            <noscript>
              <img src="{{ section.settings.image_tag2 | img_url: '800x' }}" alt="{{ section.settings.image_tag2.alt | escape }}">
            </noscript>
          </div>
        </div>
        {% endif %}
      {%- endif -%}
      
      {% if product.tags contains "cover-4-season—Minky-Plush" %}
        {% if section.settings.image_tag3 != blank %}
        <div class="FeatureText__ImageWrapper">
          {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image:
          section.settings.image_tag3 -%}{%- endcapture -%}

          <div class="AspectRatio"
            style="max-width: {{ section.settings.image_tag3.width }}px; --aspect-ratio: {{ section.settings.image_tag3.aspect_ratio }}">
            {%- assign image_url = section.settings.image_tag3 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="Image--lazyLoad Image--slide{{ section.settings.image_position | capitalize }}"
              data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto"
              alt="{{ section.settings.image_tag3.alt | escape }}">

            <noscript>
              <img src="{{ section.settings.image_tag3 | img_url: '800x' }}" alt="{{ section.settings.image_tag3.alt | escape }}">
            </noscript>
          </div>
        </div>
        {% endif %}
      {%- endif -%}

      {% if product.tags contains "cover-summer-plus-Cotton-Plush" %}
        {% if section.settings.image_tag4 != blank %}
        <div class="FeatureText__ImageWrapper">
          {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image:
          section.settings.image_tag4 -%}{%- endcapture -%}

          <div class="AspectRatio"
            style="max-width: {{ section.settings.image_tag4.width }}px; --aspect-ratio: {{ section.settings.image_tag4.aspect_ratio }}">
            {%- assign image_url = section.settings.image_tag4 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="Image--lazyLoad Image--slide{{ section.settings.image_position | capitalize }}"
              data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto"
              alt="{{ section.settings.image_tag4.alt | escape }}">

            <noscript>
              <img src="{{ section.settings.image_tag4 | img_url: '800x' }}" alt="{{ section.settings.image_tag4.alt | escape }}">
            </noscript>
          </div>
        </div>
        {% endif %}
      {%- endif -%}
      
      {% if product.tags contains "cover-basic-Cotton-Polyester" %}
        {% if section.settings.image_tag5 != blank %}
        <div class="FeatureText__ImageWrapper">
          {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image:
          section.settings.image_tag5 -%}{%- endcapture -%}

          <div class="AspectRatio"
            style="max-width: {{ section.settings.image_tag5.width }}px; --aspect-ratio: {{ section.settings.image_tag5.aspect_ratio }}">
            {%- assign image_url = section.settings.image_tag5 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="Image--lazyLoad Image--slide{{ section.settings.image_position | capitalize }}"
              data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto"
              alt="{{ section.settings.image_tag5.alt | escape }}">

            <noscript>
              <img src="{{ section.settings.image_tag5 | img_url: '800x' }}" alt="{{ section.settings.image_tag5.alt | escape }}">
            </noscript>
          </div>
        </div>
        {% endif %}
      {%- endif -%}
      
    {%- endcapture -%}

    <div
      class="FeatureText {% if product.tags contains "cover-summer-Cotton-Organic" or product.tags contains "cover-summer-Cotton-Normal" or product.tags contains "cover-4-season—Minky-Plush" or product.tags contains "cover-summer-plus-Cotton-Plush" or product.tags contains "cover-basic-Cotton-Polyester" %}FeatureText--withImage FeatureText--image{{ section.settings.image_position | capitalize }}{% endif %}">
      {%- if section.settings.image_position == 'left' -%}
      {{- section_image -}}
      {{- section_content -}}
      {%- else -%}
      {{- section_content -}}
      {{- section_image -}}
      {%- endif -%}
    </div>
  </div>
</section>

