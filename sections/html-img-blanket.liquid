<!-- section: html-img-blanket.liquid -->

{%- comment -%} CSS Added {%- endcomment -%}
{{ 'product-custom.css' | asset_url | stylesheet_tag}}

<section class="Section {% unless section.settings.image %}Section--spacingNormal{% endunless %}">
  {% if section.settings.bg-color != blank or section.settings.spacer != blank %}
  	<div class="FeaturedHtmlImage-container" style="background-color: {{ section.settings.bg-color }}; padding: {{ section.settings.spacer }}; ">
  {% endif %}
    {%- capture section_content -%}
    
    <div class="FeatureText__ContentWrapper"
        {% if section.settings.bg-color-text-html != blank %} style="background-color:{{ section.settings.bg-color-text-html }}; {% endif %}">
         
      <div class="FeatureText__Content">
        
        <header class="SectionHeader html-text-wr">
          {% if product.tags contains "cover-summer-Cotton-Organic" %}
          	<p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading_tag1 | escape }}</p>
          {%- endif -%}

          {% if product.tags contains "cover-summer-Cotton-Organic" %}
          	<h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title_tag1 | escape }}</h2>
          {%- endif -%}

          {% if product.tags contains "cover-summer-Cotton-Organic" %}
          	{{ section.settings.content_html_tag1 }}
          {% endif %}

          {% if product.tags contains "cover-summer-Cotton-Normal" %}
          	<p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading_tag2 | escape }}</p>
          {%- endif -%}

          {% if product.tags contains "cover-summer-Cotton-Normal" %}
          	<h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title_tag2 | escape }}</h2>
          {%- endif -%}
          
          {% if product.tags contains "cover-summer-Cotton-Normal" %}
          	{{ section.settings.content_html_tag2 }}
          {% endif %}
          
          {% if product.tags contains "cover-4-season—Minky-Plush" %}
          	<p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading_tag3 | escape }}</p>
          {%- endif -%}

          {% if product.tags contains "cover-4-season—Minky-Plush" %}
          	<h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title_tag3 | escape }}</h2>
          {%- endif -%}
          
          {% if product.tags contains "cover-4-season—Minky-Plush" %}
          	{{ section.settings.content_html_tag3 }}
          {% endif %}
          
          {% if product.tags contains "cover-summer-plus-Cotton-Plush" %}
          	<p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading_tag4 | escape }}</p>
          {%- endif -%}

          {% if product.tags contains "cover-summer-plus-Cotton-Plush" %}
          	<h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title_tag4 | escape }}</h2>
          {%- endif -%}
          
          {% if product.tags contains "cover-summer-plus-Cotton-Plush" %}
          	{{ section.settings.content_html_tag4 }}
          {% endif %}
          
          {% if product.tags contains "cover-basic-Cotton-Polyester" %}
          	<p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading_tag5 | escape }}</p>
          {%- endif -%}

          {% if product.tags contains "cover-basic-Cotton-Polyester" %}
          	<h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title_tag5 | escape }}</h2>
          {%- endif -%}
          
          {% if product.tags contains "cover-basic-Cotton-Polyester" %}
          	{{ section.settings.content_html_tag5 }}
          {% endif %}
          
        </header>
      
      </div>
    </div>
    {%- endcapture -%}

   
	{%- capture section_image -%}
      {% if product.tags contains "cover-summer-Cotton-Organic" %}
        {% if section.settings.image_tag1 != blank %}
        <div class="FeatureText__ImageWrapper">
          {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image:
          section.settings.image_tag1 -%}{%- endcapture -%}

          <div class="AspectRatio"
            style="max-width: {{ section.settings.image_tag1.width }}px; --aspect-ratio: {{ section.settings.image_tag1.aspect_ratio }}">
            {%- assign image_url = section.settings.image_tag1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="Image--lazyLoad Image--slide{{ section.settings.image_position | capitalize }}"
              data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto"
              alt="{{ section.settings.image_tag1.alt | escape }}">

            <noscript>
              <img src="{{ section.settings.image_tag1 | img_url: '800x' }}" alt="{{ section.settings.image_tag1.alt | escape }}">
            </noscript>
          </div>
        </div>
        {% endif %}
      {%- endif -%}
      
      {% if product.tags contains "cover-summer-Cotton-Normal" %}
        {% if section.settings.image_tag2 != blank %}
        <div class="FeatureText__ImageWrapper">
          {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image:
