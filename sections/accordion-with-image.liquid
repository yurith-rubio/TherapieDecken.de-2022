<!-- accordion-video-product.liquid -->

{{ 'product-custom.css' | asset_url | stylesheet_tag}}

<div class="grid-general-product">
  <div class="intro-section">
      <p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.sub-heading}}</p>
      <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.heading}}</h2>
      <div class="intro-sec-content">

          <div class="intro-part-1">
              {% for block in section.blocks %}
                  <details>
                    <summary style="padding: 0 10px 5px;"><span class="icon_accordion icon_25">{% render 'icons_monotone' | block:block, settings: settings %}</span>
                      {{ block.settings.summary}}</summary>
                      <p class="content">{{ block.settings.content }}</p>
                  </details>
              {% endfor %}

          </div>
          <div class="intro-part-2">
              <div class="responsive-video">
                  <iframe class="Image--lazyLoad" data-src="{{ section.settings.video_url}}?autoplay=0&portrait=0&byline=0&color={{ settings.accent_color | remove_first: '#' }}" frameborder="0"></iframe>
              </div>
          </div>
      </div>
  </div>
</div>

{% schema %} 
{
    "name": "Accordion with Image",
    "settings": [
		{
            "type": "text",
            "id": "sub-heading",
            "label": "Sub-Heading Accordion",
            "default": "Premium Therapiedecke"
        },
		{
            "type": "text",
            "id": "heading",
            "label": "Heading Accordion",
            "default": "Eigenschaften der Balance Gewichtsdecke"
        },
        {
            "id": "video_url",
            "type": "video_url",
            "label": "Video URL for Desktop",
            "accept": ["vimeo"],
            "info": "Supports Vimeo",
            "default": "https://player.vimeo.com/video/399192093"
        }
    ],
    "blocks": [
        {
            "type": "accordion_simple",
            "name": "Accordion with Video",
            "settings": [
                {
                  "type": "select",
                  "id": "simple_icons",
                  "label": "Simple Icons",
                  "options": [
                    {
                      "value": "none",
                      "label": "Select Icon"
                    },
                    {
                      "value": "wirkung",
                      "label": "Wirkung"
                    },
                    {
                      "value": "gewicht",
                      "label": "Gewicht"
                    },
                    {
                      "value": "materialien",
                      "label": "Materialien"
                    },
                    {
                      "value": "4jahreszeiten",
                      "label": "4-Jahreszeiten"
                    },
                    {
                      "value": "28tagen",
                      "label": "28 Tage Probeschlafen"
                    },
                    {
                      "value": "3optionen",
                      "label": "3 Optionen"
                    },
                    {
                      "value": "einsteigermodell",
                      "label": "Einsteigermodell"
                    },
                    {
                      "value": "inklusive_basic",
                      "label": "Inklusive Basic Bezug"
                    }
                  ],
                  "default": "none"
                },
                {
                    "type": "text",
                    "id": "summary",
                    "label": "Title",
                    "default": "Title Example"
                },
                {
                    "type": "textarea",
                    "id": "content",
                    "label": "Content",
                    "default": "Example of text that could be paced with something related to the title above"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Product Sections",
            "name": "Accordion with Image",
            "settings": {}
        }
    ]
}
{% endschema %}