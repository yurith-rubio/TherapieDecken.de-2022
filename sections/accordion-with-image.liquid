<!-- accordion-video-product.liquid -->

{{ 'accordion-with-image.css' | asset_url | stylesheet_tag}}

<div class="grid-general-product">
  <div class="accordion-with-image_IntroSection">
      <p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.sub-heading}}</p>
      <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.heading}}</h2>
      <div class="accordion-with-image_IntroSecContent">

          <div class="accordion-with-image_IntroPart1">
              {% for block in section.blocks %}
                  <details>
                    <summary style="padding: 0 10px 5px;"><span class="icon_accordion icon_25">{% render 'icons_monotone' | block:block, settings: settings %}</span>
                      {{ block.settings.summary}}</summary>
                      <p class="content">{{ block.settings.content }}</p>
                  </details>
              {% endfor %}
          </div>
          <div class="accordion-with-image_IntroPart2">
			<img class="Image--lazyLoad" data-src="{{ section.settings.image | img_url : '450x300', crop: 'center' }}" alt="{{ section.settings.image.alt | escape }}">
          </div>
      </div>
  </div>
</div>

{% schema %} 
{
    "name": "Accordion with Image",
    "settings": [
		{
            "type": "text",
            "id": "sub-heading",
            "label": "Sub-Heading Accordion",
            "default": "Premium Therapiedecke"
        },
		{
            "type": "text",
            "id": "heading",
            "label": "Heading Accordion",
            "default": "Eigenschaften der Balance Gewichtsdecke"
        },
        {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
        }
    ],
    "blocks": [
        {
            "type": "accordion_simple",
            "name": "Accordion with Video",
            "settings": [
                {
                  "type": "select",
                  "id": "simple_icons",
                  "label": "Simple Icons",
                  "options": [
                    {
                      "value": "none",
                      "label": "Select Icon"
                    },
                    {
                      "value": "wirkung",
                      "label": "Wirkung"
                    },
                    {
                      "value": "gewicht",
                      "label": "Gewicht"
                    },
                    {
                      "value": "materialien",
                      "label": "Materialien"
                    },
                    {
                      "value": "4jahreszeiten",
                      "label": "4-Jahreszeiten"
                    },
                    {
                      "value": "28tagen",
                      "label": "28 Tage Probeschlafen"
                    },
                    {
                      "value": "3optionen",
                      "label": "3 Optionen"
                    },
                    {
                      "value": "einsteigermodell",
                      "label": "Einsteigermodell"
                    },
                    {
                      "value": "inklusive_basic",
                      "label": "Inklusive Basic Bezug"
                    }
                  ],
                  "default": "none"
                },
                {
                    "type": "text",
                    "id": "summary",
                    "label": "Title",
                    "default": "Title Example"
                },
                {
                    "type": "textarea",
                    "id": "content",
                    "label": "Content",
                    "default": "Example of text that could be paced with something related to the title above"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Product Sections",
            "name": "Accordion with Image",
            "settings": {}
        }
    ]
}
{% endschema %}