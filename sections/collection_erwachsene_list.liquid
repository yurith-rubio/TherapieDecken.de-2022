<div class="collection_erwachsene_main">
  <div class="heading_wrapper SectionHeader--center">
    <p class="Heading u-h6">Original Therapiedecken</p>
    <h1 class="Heading u-h1">Welche Therapiedecken Modelle f√ºr Erwachsene gibt es?</h1>
    <a href="/pages/therapiedecken-vergleich" class="ImageHero__BlockLink Link Link--underline">Zum Detailvergleich</a>
  </div>
  {%- capture collection_items -%}
      {%- for block in section.blocks -%}
  		{%- assign collection = collections[block.settings.collection] -%}
      	{%- render 'collection_erwachsene_item', block: block, collection: collection -%}
      {%- endfor -%}
  {%- endcapture -%}
  <div class="collection_erwachsene_wrapper">
    {{ collection_items }}
  </div>
</div>
