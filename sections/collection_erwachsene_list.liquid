  <div class="collection_erwachsene_wrapper">
    <div class="collection_erwchsene_list">
        <div class="collection_content_img">
    		<img src="https://cdn.shopify.com/s/files/1/2451/6611/files/Insurance-lp-image2.jpg?v=1656500179">
        </div>
  		<div class="collection_content_block">
          <div class="blanket_image">
          	<img src="https://cdn.shopify.com/s/files/1/2451/6611/products/1200x1200_9_6e6461a7-7b81-4579-ac03-ba6b860fabc9_900x.jpg?v=1650025256">
          </div>
          <div class="blanket_content">
            <div class="price_div Heading">
              <span style="font-size: 10px">Ab</span>
              <span class="price">229 €</span>
            </div>
