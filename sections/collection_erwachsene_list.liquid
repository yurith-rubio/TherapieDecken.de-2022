<style>
  .collection_erwachsene_main{
  	padding-top: 100px;
  }
  .heading_wrapper p{
  	margin-bottom:0;
  }
  .collection_erwachsene_wrapper{
  	display: grid;
    grid-template-columns:1fr 1fr;
    margin: 80px 30px;
    column-gap: 40px;
  }
  .collection_erwchsene_list{
    position: relative;
  }
  .collection_content_img{
  	display: block;
    position: relative;
    width: 100%;
    height: 400px;
  }
  .collection_content_img img{
  	width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .collection_content_block{
  	position: absolute;
    top: 70px;
    right: 25px;
    background: #ffffffcf;
    text-align: center;
    padding: 0 25px;
  }
  .blanket_image{
  	position: relative;
    width: 100px;
    height: auto;
    margin: -40px auto 0;
  }
  .blanket_image img{
  	width: 100%; 
    height: auto;
  }
  .blanket_content{
  	margin-top: 15px;
  }
  .blanket_content .price{
  	font-size: 18px;
    color: #ba2e2e;
  }
  .blanket_content .title{
  	font-size:22px;
  }
  .blanket_content .title span{
  	text-transform: uppercase;
  }
</style>
