{% style %}
  .leadGrid_productImageBadge{
    max-height: {{ section.settings.badge_width }}px;
    top: {{ section.settings.badge_top }}px;;
    right: {{ section.settings.badge_right }}px;;
  }
{% endstyle %}

{% assign medizin = all_products ['medizinische-gewichtsdecke-fur-kinder'] %}
{% assign balance = all_products ['premium-balance-gewichtsdecke-fur-kinder'] %}
{% assign gravity = all_products ['gravity-gewichtsdecke-fur-kinder'] %}

<div class="leadGrid_container">
    <div class="leadGrid_productBlockWrapper">
      {% if settings.enable_leading_collection_badge and section.settings.promo_badge_1 %}
        <div class="leadGrid_badgeWrapper">
          <img class="leadGrid_productImageBadge" src="{{ settings.promo_badge }}" alt="badge-medical-product" width="" height="auto">
        </div>
      {% endif %}
      <a href="/products/medizinische-gewichtsdecke-fur-kinder">
        <span style="height: 42px; display:block"></span>
        <div class="leadGrid_productImageContent">
          <img class="leadGrid_productImage" src="https://cdn.shopify.com/s/files/1/2451/6611/files/medical.png?v=1663601123" alt="medical-product" width="" height="auto">
        </div>
        <h2 class="Heading u-h1">Medizinische</h2>
        <p class="Heading">Gewichtsdecke für Kinder</p>
        <div style='{{ jm_style }}; margin-bottom: 20px;' class='jdgm-widget jdgm-preview-badge' data-id='{{ medizin.id }}'
            data-template='{% if concierge_install == true or concierge_install == nil %}{{ template }}{% else %}manual-installation{% endif %}'
            data-auto-install='{% if auto_install != nil %}{{ auto_install }}{% else %}false{% endif %}'>
                {{ medizin.metafields.judgeme.badge }}
        </div>
        <div class="leadGrid_productCharacteristicsWrapper">
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-stability70"></span>
                <p class="Heading u-h6">
                    70% fest stabil
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_glassballs"></span>
                <p class="Heading u-h6">
                    Glasperlen
                </p>
            </div>
        </div>
        <p>Ab <span class="leadGrid_lowestPrice Heading Price--highlight">{{ medizin.price_min | money_without_trailing_zeros }}</span></p>
        <button class="leadGrid_buttonBlock Button_Colleciton_small Button Button--primary">Mehr Erfahren</button>
      </a>
    </div>
    <div class="leadGrid_productBlockWrapper">
      {% if settings.enable_leading_collection_badge and section.settings.promo_badge_2 %}
        <div class="leadGrid_badgeWrapper">
          <img class="leadGrid_productImageBadge" src="{{ settings.promo_badge }}" alt="badge-gravity-product" width="" height="auto">
        </div>
      {% endif %}
      <a href="/collections/kinder/products/gravity-gewichtsdecke-fur-kinder">
        <img class="leadGrid_logo" src="https://cdn.shopify.com/s/files/1/2451/6611/files/Gravity-black-svg-logo.svg?v=1661176871" alt="gravity-logo" width="100" height="auto">
        <div class="leadGrid_productImageContent">
          <img class="leadGrid_productImage" src="https://cdn.shopify.com/s/files/1/2451/6611/files/gravity_kids.png?v=1663601123" alt="gravity-product" width="" height="auto">
        </div>
        <h2 class="Heading u-h1">Gravity</h2>
        <p class="Heading">Gewichtsdecke für Kinder</p>
        <div style='{{ jm_style }}; margin-bottom: 20px;' class='jdgm-widget jdgm-preview-badge' data-id='{{ gravity.id }}'
            data-template='{% if concierge_install == true or concierge_install == nil %}{{ template }}{% else %}manual-installation{% endif %}'
            data-auto-install='{% if auto_install != nil %}{{ auto_install }}{% else %}false{% endif %}'>
                {{ gravity.metafields.judgeme.badge }}
        </div>
        <div class="leadGrid_productCharacteristicsWrapper">
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-stability70"></span>
                <p class="Heading u-h6">
                    80% fest stabil
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_glassballs"></span>
                <p class="Heading u-h6">
                    Glasperlen
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_loopribbon"></span>
                <p class="Heading u-h6">
                    Schlaufen
                </p>
            </div>
        </div>
        <p>Ab <span class="leadGrid_lowestPrice Heading Price--highlight">{{ gravity.price_min | money_without_trailing_zeros }}</span></p>
        <button class="leadGrid_buttonBlock Button_Colleciton_small Button Button--primary">Mehr Erfahren</button>
      </a>
    </div>
    <div class="leadGrid_productBlockWrapper">
      <a href="/collections/kinder/products/premium-balance-gewichtsdecke-fur-kinder">
        <img class="leadGrid_logo" src="https://cdn.shopify.com/s/files/1/2451/6611/files/Balance-black-svg-logo.svg?v=1661176871" alt="balance-logo" width="100" height="auto">
        <div class="leadGrid_productImageContent">
          <img class="leadGrid_productImage" src="https://cdn.shopify.com/s/files/1/2451/6611/files/balance_kids.png?v=1663601123" alt="balance-product" width="" height="auto">
          {% if settings.enable_leading_collection_badge and section.settings.promo_badge_3 %}
            <img class="leadGrid_productImageBadge" src="{{ settings.promo_badge }}" alt="badge-balance-product" width="" height="auto">
          {% endif %}
        </div>
        <h2 class="Heading u-h1">Balance</h2>
        <p class="Heading">Gewichtsdecke für Kinder</p>
        <div style='{{ jm_style }}; margin-bottom: 20px;' class='jdgm-widget jdgm-preview-badge' data-id='{{ balance.id }}'
            data-template='{% if concierge_install == true or concierge_install == nil %}{{ template }}{% else %}manual-installation{% endif %}'
            data-auto-install='{% if auto_install != nil %}{{ auto_install }}{% else %}false{% endif %}'>
                {{ balance.metafields.judgeme.badge }}
        </div>
        <div class="leadGrid_productCharacteristicsWrapper">
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_stability100-1"></span>
                <p class="Heading u-h6">
                    100% fest stabil
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-icn_metalballs"></span>
                <p class="Heading u-h6">
                    Edelstahlperlen
                </p>
            </div>
            <div class="leadGrid_iconTextWrapper">
                <span class="icon-30 icon-zipper"></span>
                <p class="Heading u-h6">
                    Reißverschluss
                </p>
            </div>
        </div>
        <p>Ab <span class="leadGrid_lowestPrice Heading Price--highlight">{{ balance.price_min | money_without_trailing_zeros }}</span></p>
        <button class="leadGrid_buttonBlock Button_Colleciton_small Button Button--primary">Mehr Erfahren</button>
      </a>
    </div>
</div>


{% schema %}
{
  "name": "Grid Kinder",
  "settings": [
    {
      "type": "checkbox",
      "id": "promo_badge_1",
      "label": "Enable badge on block 1",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "promo_badge_2",
      "label": "Enable badge on block 2",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "promo_badge_3",
      "label": "Enable badge on block 3",
      "default": false
    },
    {
      "type": "range",
      "id": "badge_width",
      "label": "Desktop: Width",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "badge_top",
      "label": "Top space",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "badge_right",
      "label": "Right space",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 30
    }
  ],
  "presets": [
	{
      "category": "Pages",
      "name": "Grid Kinder",
      "settings": {}
	}
  ]
}
{% endschema %}